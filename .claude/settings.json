{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiWrite",
        "hooks": [
          {
            "type": "command",
            "command": "npm run check",
            "timeout": 30
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(do mv \"$f\" \"../../components/cv/$f#-\")",
      "Bash(done)",
      "Bash(find:*)",
      "Bash(for f in -Cv*.tsx -Cv*.css)",
      "Bash(gh repo list:*)",
      "Bash(git checkout:*)",
      "Bash(git show:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm --version:*)",
      "Bash(npm install:*)",
      "Bash(npm ls:*)",
      "Bash(npm run check:*)",
      "Bash(npm run check:compile:*)",
      "Bash(npm run check:format:*)",
      "Bash(npm run check:lint:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run format:*)",
      "Bash(npm run generate:cv:*)",
      "Bash(npm run knip:*)",
      "Bash(npm run lint)",
      "Bash(npm run storybook:*)",
      "Bash(npm run test:compile:*)",
      "Bash(npm show:*)",
      "Bash(npm uninstall:*)",
      "Bash(npx biome lint:*)",
      "Bash(npx biome:*)",
      "Bash(npx tcm:*)",
      "Bash(npx tsc:*)",
      "Bash(xargs kill:*)",
      "Bash(xargs:*)",
      "WebFetch(domain:biomejs.dev)",
      "WebFetch(domain:bugs.chromium.org)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:eslint.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:issues.chromium.org)",
      "WebFetch(domain:knip.dev)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:tanstack.com)",
      "WebFetch(domain:typescript-eslint.io)",
      "WebFetch(domain:v3.nitro.build)",
      "WebFetch(domain:vanilla-extract.style)",
      "WebFetch(domain:vite.dev)",
      "WebFetch(domain:www.answeroverflow.com)",
      "WebFetch(domain:www.npmjs.com)",
      "WebSearch",
      "mcp__ESLint__lint-files",
      "mcp__chrome-devtools__*",
      "mcp__exa__*"
    ],
    "deny": [],
    "ask": []
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "ESLint"
  ]
}
