---
import Navigation from "./Navigation.astro";
---

<header class="Header">
  <div class="content">
    <h1>nbr.haus</h1>
    <!-- <Navigation /> -->
  </div>
</header>

<style>
  .Header {
    border-bottom: var(--border-size-1) solid var(--fg-accent);
    background-color: var(--bg-main);
    position: sticky;
    top: 0;
    z-index: 10;

    .content {
      margin: 0 auto;
      display: flex;
      justify-content: space-between;
      align-items: center;

      padding: 0 var(--size-6);
      max-width: var(--content-max-width);

      h1 {
        margin: 0;
        font-weight: var(--font-weight-9);
        color: var(--fg-accent);
      }
    }
  }
</style>
