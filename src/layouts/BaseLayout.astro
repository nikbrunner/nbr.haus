---
export interface Props {
  title: string;
}

const { title = "nbr.haus" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="light-mode">
    <slot name="header" />
    <main>
      <slot />
    </main>
  </body>

  <style is:global>
    :root {
      --bp-sm: 640px;
      --bp-md: 768px;
      --bp-lg: 1024px;
      --bp-xl: 1280px;
      --bp-2xl: 1536px;

      /* Space */
      --space-1: 0.25rem; /* 4px */
      --space-2: 0.5rem; /* 8px */
      --space-3: 0.75rem; /* 12px */
      --space-4: 1rem; /* 16px */
      --space-5: 1.25rem; /* 20px */
      --space-6: 1.5rem; /* 24px */
      --space-7: 2rem; /* 32px */
      --space-8: 2.5rem; /* 40px */
      --space-9: 3rem; /* 48px */
      --space-10: 4rem; /* 64px */

      /* Font Families */
      --font-family-serif: "Times New Roman", Times, serif;
      --font-family-sans-serif: system-ui, -apple-system, BlinkMacSystemFont,
        "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
        "Helvetica Neue", sans-serif;
      --font-family-monospace: "Courier New", Courier, monospace;
      --font-family-default: var(--font-family-sans-serif);

      /* Font Sizes */
      --font-size-1: 0.75rem; /* 12px */
      --font-size-2: 0.875rem; /* 14px */
      --font-size-3: 1rem; /* 16px */
      --font-size-4: 1.125rem; /* 18px */
      --font-size-5: 1.25rem; /* 20px */
      --font-size-6: 1.5rem; /* 24px */
      --font-size-7: 1.875rem; /* 30px */
      --font-size-8: 2.25rem; /* 36px */
      --font-size-9: 3rem; /* 48px */
      --font-size-10: 4rem; /* 64px */

      /* Font Weights */
      --font-weight-thin: 100;
      --font-weight-light: 300;
      --font-weight-regular: 400;
      --font-weight-medium: 500;
      --font-weight-bold: 700;
      --font-weight-extra-bold: 800;

      /* Animation */
      --transition-time-fast: 0.2s;
      --transition-time-medium: 0.5s;
      --transition-time-slow: 1s;
    }

    .light-mode {
      --color-bg-hs: 200, 14%;
      --color-fg-hs: 210, 22%;

      --color-bg: hsl(var(--color-bg-hs), 93%);
      --color-bg-light: hsl(var(--color-bg-hs), 98%);
      --color-bg-dark: hsl(var(--color-bg-hs), 88%);
      --color-bg-dimmed: hsla(var(--color-bg-hs), 93%, 0.6);
      --color-bg-dimmed-more: hsla(var(--color-bg-hs), 93%, 0.3);
      --color-bg-dimmed-most: hsla(var(--color-bg-hs), 93%, 0.1);

      --color-fg: hsl(var(--color-fg-hs), 15%);
      --color-fg-light: hsl(var(--color-fg-hs), 35%);
      --color-fg-dark: hsl(var(--color-fg-hs), 5%);
      --color-fg-dimmed: hsla(var(--color-fg-hs), 15%, 0.6);
      --color-fg-dimmed-more: hsla(var(--color-fg-hs), 15%, 0.3);
      --color-fg-dimmed-most: hsla(var(--color-fg-hs), 15%, 0.1);
    }

    .dark-mode {
      --color-bg-hs: 200, 14%;
      --color-fg-hs: 210, 22%;

      --color-bg: hsl(var(--color-fg-hs), 15%);
      --color-bg-light: hsl(var(--color-fg-hs), 35%);
      --color-bg-dark: hsl(var(--color-fg-hs), 5%);
      --color-bg-dimmed: hsla(var(--color-fg-hs), 15%, 0.6);
      --color-bg-dimmed-more: hsla(var(--color-fg-hs), 15%, 0.3);
      --color-bg-dimmed-most: hsla(var(--color-fg-hs), 15%, 0.1);

      --color-fg: hsl(var(--color-fg-hs), 93%);
      --color-fg-light: hsl(var(--color-fg-hs), 98%);
      --color-fg-dark: hsl(var(--color-fg-hs), 88%);
      --color-fg-dimmed: hsla(var(--color-fg-hs), 93%, 0.6);
      --color-fg-dimmed-more: hsla(var(--color-fg-hs), 93%, 0.3);
      --color-fg-dimmed-most: hsla(var(--color-fg-hs), 93%, 0.1);
    }

    html,
    body {
      font-family: var(--font-family-default);
      padding: 0;
      margin: 0;

      background-color: var(--color-bg);
      color: var(--color-fg);
    }
  </style>
</html>
