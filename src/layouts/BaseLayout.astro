---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HuePaintBucket from "../components/HuePaintBucket.tsx";
import "../styles/global.scss";

export interface Props {
  title: string;
}

const { title = "nbr.haus" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main class="content">
      <slot />
    </main>
    <HuePaintBucket client:load />
  </body>
</html>

<style lang="scss">
  .content {
    min-height: inherit;
  }
</style>
