---
import Header from "../components/Header.astro";
import AccentPicker from "../components/AccentPicker";
import "../styles/global.css";

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
}

const {
  title = "Nik Brunner - Software Engineer | Frontend Developer",
  description = "Software Engineer with 5+ years of experience building frontend architectures and design systems. Specialized in React, TypeScript, and modern web technologies. Available February 2026.",
  ogImage = "/og-image.jpg"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageUrl = new URL(ogImage, Astro.url);
const currentUrl = Astro.url;
---

<!doctype html>
<html lang="en" style="scroll-behavior: smooth;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageUrl} />
  </head>
  <body>
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Nik Brunner",
        url: "https://www.nbr.haus",
        image: ogImageUrl.href,
        jobTitle: "Software Engineer",
        description: description,
        knowsAbout: [
          "React",
          "TypeScript",
          "GraphQL",
          "Frontend Architecture",
          "Design Systems",
          "Tailwind CSS",
          "TanStack",
          "Redux",
          "Electron"
        ],
        alumniOf: {
          "@type": "EducationEvent",
          name: "Self-taught Web Developer"
        },
        workLocation: {
          "@type": "Place",
          address: {
            "@type": "PostalAddress",
            addressLocality: "Landshut",
            addressCountry: "Germany"
          }
        },
        sameAs: ["https://github.com/nikbrunner", "https://www.linkedin.com/in/nbru/"]
      })}
    />
    <Header />
    <main class="layout">
      <slot />
    </main>
    <AccentPicker client:only="react" />
  </body>
</html>

<style>
  /* Mobile base styles */
  .layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--size-8);
    margin: 0 auto;
    padding: var(--base-layout-top-padding) var(--size-6);
    padding-bottom: 100vh;
  }

  /* Desktop styles (md and above) - 4 column grid */
  @media (min-width: 768px) {
    .layout {
      grid-template-columns: 1fr minmax(0, var(--content-max-width)) minmax(0, var(--content-max-width)) 1fr;
      padding-left: 0;
      padding-right: 0;
    }
  }
</style>
