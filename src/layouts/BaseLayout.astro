---
export interface Props {
  title: string;
}

const { title = "nbr.haus" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main class="content">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import "../styles/global.scss";
</style>

<style lang="scss">
  .content {
    min-height: inherit;
  }
</style>
