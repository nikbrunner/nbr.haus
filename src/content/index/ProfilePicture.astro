---
import profile_picture from "../../components/../assets/images/profile_picture.jpg";
---

<div class="profile-picture">
  <img
    class="profile-image"
    src={profile_picture.src}
    alt="Nik Brunner's personal website - a black and white photograph of a modernist house representing his digital home"
  />
  <div class="profile-image-overlay"></div>
</div>

<style>
  .profile-picture {
    position: relative;
  }

  .profile-image {
    aspect-ratio: 1 / 1;
    width: 100%;
    object-fit: cover;
    display: block;
    box-shadow: var(--shadow-hard-15);
    border: var(--border-size-2) solid var(--fg-accent);
  }

  .profile-image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--fg-accent);
    opacity: 0.1;
    z-index: 1;
  }
</style>
