---
import BaseLayout from "../layouts/BaseLayout.astro";
import Section from "../components/Section.astro";
import Jobs from "../components/content/Jobs.astro";

import ProfilePicture from "../components/content-blocks/ProfilePicture.astro";
import Projects from "../components/content-blocks/Projects.astro";
import About from "../components/content-blocks/About.astro";
import TechStack from "../components/content-blocks/TechStack.astro";
import DevTools from "../components/content-blocks/DevTools.astro";
import AI from "../components/content-blocks/AI.astro";
import Connect from "../components/content-blocks/Connect.astro";
---

<BaseLayout>
  <div class="column-left">
    <Section title="Work"><Jobs /></Section>
    <Section title="Projects"><Projects /></Section>
  </div>

  <div class="column-right">
    <Section><ProfilePicture /></Section>
    <Section title="About"><About /></Section>
    <Section title="Tech Stack"><TechStack /></Section>
    <Section title="Dev Tools"><DevTools /></Section>
    <Section title="AI"><AI /></Section>
    <Section title="Connect"><Connect /></Section>
  </div>
</BaseLayout>

<style>
  /* Mobile: columns stack naturally */
  .column-left,
  .column-right {
    display: flex;
    flex-direction: column;
    gap: var(--size-8);
  }

  /* Desktop: position in grid columns */
  @media (min-width: 768px) {
    .column-left {
      grid-column: 2;
    }

    .column-right {
      grid-column: 3;
    }
  }
</style>
